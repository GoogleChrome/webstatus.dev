{
  "configurations": [
    {
      "name": "Debug 'Backend' service",
      "type": "cloudcode.kubernetes",
      "request": "attach",
      "language": "Go",
      "debugPort": 56268,
      "podSelector": {
        "app.kubernetes.io/name": "backend"
      },
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "/work/backend"
    },
    {
      "name": "Debug 'Repo Downloader' service",
      "type": "cloudcode.kubernetes",
      "request": "attach",
      "language": "Go",
      "debugPort": 56268,
      "podSelector": {
        "app.kubernetes.io/name": "repo-downloader"
      },
      "localRoot": "${workspaceFolder}/workflows/steps/services/common/repo_downloader",
      "remoteRoot": "/work/workflows/steps/services/common/repo_downloader"
    },
    {
      "name": "Debug 'Web Feature Consumer' service",
      "type": "cloudcode.kubernetes",
      "request": "attach",
      "language": "Go",
      "debugPort": 56268,
      "podSelector": {
        "app.kubernetes.io/name": "web-feature-consumer"
      },
      "localRoot": "${workspaceFolder}/workflows/steps/services/web_feature_consumer",
      "remoteRoot": "/work/workflows/steps/services/web_feature_consumer"
    },
    {
      "type": "antlr-debug",
      "request": "launch",
      "name": "Debug FeatureSearch grammar",
      "input": "antlr/test_input.txt",
      "visualParseTree": true,
      "printParseTree": true,
      "grammar": "antlr/FeatureSearch.g4",
      "startRule": "query"
    }
  ]
}
